<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary branding color for the app -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Styles for common text appearances -->
    <style name="AppText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AppText.Large" parent="AppText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/background</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <!-- More styles can be added as needed -->
</resources>